{{ define "title" }}<title>{{ .Title }}</title>{{ end }}
<div class="container-fluid">
    {{ define "content" }}
    <div class="row">
        <div class="col-sm-6" style="margin-bottom: 10px;">
            <div class="card">
              <div class="card-header">
                <h4 class="center">Recently Modified</h4>
              </div>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Keyword</th>
                      <th>Title</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                  {{ range .LinkDB.LinksByMtime 1 }}
                    {{- if ne .ID 1 }}
                      <tr>
                        <td><a href="/.{{ index .Lists 0 }}" class="go2keyword go2keyword-small" title="{{ index .Lists 0 }}">{{ index .Lists 0 }}</a></td>
                        <td>{{ if .Special }}<a title="{{ .URL }}">{{ .Title }}</a>{{ else }}<a href="/.{{ index .Lists 0 }}"><span>{{ .Title }}</span></a>{{ end }} </td>
                        <td><a role="button" class="btn btn-outline-secondary btn-sm" title="Edit link #{{ .ID }}" href="/_link_/{{ .ID }}?returnto={{ index .Lists 0 }}">edit</a></td>
                      </tr>
                    {{- end }}
                  {{- end }}
                  </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-6" style="margin-bottom: 10px;">
            <div class="card">
              <div class="card-header">
                <h4 class="center">Popular Links</h4>
              </div>
              <table class="table">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Lists</th>
                      <th>{{/*this is empty so the edit button gets a header*/}}</th>
                    </tr>
                  </thead>
                  <tbody>
                  {{ range .LinkDB.LinksByAtime 1 }}
                      {{ if ne .ID 1 }}
                    <tr>
                      <td>{{ if .Special }}<a title="{{ .URL }}">{{ .Title }}</a>{{ else }}<a href="{{ .URL }}"><span>{{ .Title }}</span></a>{{ end }}</td>
                      <td><span class="go2keyword go2keyword-small">{{ .Lists }}</span></td>
                      <td><a role="button" class="btn btn-outline-secondary btn-sm" title="Edit link #{{ .ID }}" href="/_link_/{{ .ID }}?returnto={{ index .Lists 0 }}">edit</a></td>
                    </tr>
                  {{- end }}
                  {{- end }}
                  </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    <h4>All Lists</h4>
    <ul id="keywordslist" class="list-inline"></ul>

    <div>
        {{/* keeping this in here just in case we want to bring it back quickly */}}
